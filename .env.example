# Hermitage Frankfurt - Environment Configuration
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-super-secret-key-change-in-production

# Database
# For development (SQLite)
DATABASE_URL=sqlite:///hermitage.db

# For production (PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/hermitage

# OpenAI API for Chatbot and Blog Generation
OPENAI_API_KEY=sk-your-openai-api-key

# Email Configuration (for contact form)
MAIL_SERVER=smtp.strato.de
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=info@hermitage-frankfurt.de
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=info@hermitage-frankfurt.de

# Admin email for notifications
ADMIN_EMAIL=info@hermitage-frankfurt.de

# OpenAI Model Configuration
CHATBOT_MODEL=gpt-4o
BLOG_MODEL=gpt-4o

# News API for Trend Detection (optional - from newsapi.org)
NEWS_API_KEY=your-news-api-key

REMEMBER_COOKIE_SECURE=false
